#!/bin/bash

#clear
echo '----------------------------------------------------------------------------------------------------------------------------------------------------------------' | sed -e 's/.*/\x1b[38;5;31m&\x1b[0m/i'

docker ps --all | sed \
    -e 's/CONTAINER ID/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/IMAGE/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/COMMAND/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/CREATED/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/STATUS/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/PORTS/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/NAMES/\x1b[38;5;16;48;5;31m&\x1b[0m/i' \
    -e 's/^.* Exited .*/\x1b[38;5;89m&\x1b[0m/i' \
    -e 's/^.* Up .*/\x1b[38;5;34m&\x1b[0m/i' \
    -e 's/^.*/\x1b[38;5;31m&\x1b[0m/i'
